pipeline{
    agent any
    environment{
    JAVA_PATH="/opt/bin/java17"
}
    stages{
        stage("working with variables"){
            steps{
                script{
                    batchno= 1
                    topic= "defining a variable in jenkins"
                    println "my batch no is ${batchno}, topic is ${topic}"
                    println "my java is ${env.JAVA_PATH}"
                }
            }
        }
    }
}
